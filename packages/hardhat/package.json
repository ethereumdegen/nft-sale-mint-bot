  "scripts": {
    "build": "rm -rf ./types/typechain && mkdir ./types/typechain && COMPILING=1 hardhat compile && yarn types ",
    "hf": "hf() { local network=\"$1\"; shift; FORKING_NETWORK=$network yarn hardhat \"$@\"; }; hf",
    "chain": "hardhat node --network hardhat --no-deploy",
    "fork": "env -- hardhat node --no-deploy --network hardhat --fork https://mainnet.infura.io/v3/$INFURA_KEY",
    "test": "test() { TESTING=1 yarn hf \"$1\" test; }; test",
    "compile": "COMPILING=1 hardhat compile",
    "types": "yarn typechain --target ethers-v5 --out-dir types/typechain 'artifacts/!(build-info)/**/+([a-zA-Z0-9_]).json'",
    "deploy": "hardhat deploy --export-all ../vue-app/src/config/hardhat_contracts.json",
    "export:all": "hardhat export --export-all ../vue-app/src/config/hardhat_contracts.json",
    "flatten": "hardhat flatten",
    "postdeploy": "hardhat run scripts/publish.js",
    "watch": "node scripts/watch.js",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "send": "hardhat send",
    "generate": "hardhat generate",
    "account": "hardhat account",
    "verify": "hardhat etherscan-verify --api-key PSW8C433Q667DVEX5BCRMGNAH9FSGFZ7Q8"
  }
}
